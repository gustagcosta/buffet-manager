@model Buffet.ViewModels.Private.Evento.EventoViewModel;

@{
    ViewData["Title"] = "Eventos";
}

<div class="card mt-2">
    <div class="card-body">
        <h3>Lista de Eventos</h3>
      
        <div>
            <form method="get" asp-controller="Evento" asp-action="EventoFiltro">
                <div class="form-row">
                    <div class="col-4">
                        <label for="descricao">Descrição</label>
                        <input type="text" name="buscaDesc" class="form-control" id="buscaDesc">
                    </div>
                    <div class="col-4">
                        <label for="dataInicio">Inicio</label>
                        <input type="date" name="buscaInicio" class="form-control" id="buscaInicio" />
                    </div>
                    <div class="col-4">
                        <label for="dataFim">Fim</label>
                        <input type="date" name="buscaFim" class="form-control" id="buscaFim" />
                    </div>
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-primary" type="submit">Pesquisar</button>
                    <a asp-controller="Evento" asp-action="Create" class="btn btn-success">Novo Evento</a>
                </div>
            </form>
        </div>
        <div class="mt-3">
            <table class="table table-striped">
                <tr>
                    <th>Descrição</th>
                    <th>Data Inicio - Data Fim</th>
                    <th></th>
                </tr>
                @if (@Model != null)
                {
                    @foreach (var c in @Model.Eventos)
                    {
                        <tr>
                            <td>@c.Descricao</td>
                            <td>@c.Inicio.Date.ToString("dd/MM/yyyy") - @c.Fim.Date.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-controller="Evento" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-primary">Ver/Editar</a>
                                <a class="ml-2 btn btn-danger" asp-controller="Evento" asp-action="Destroy" asp-route-id="@c.Id">Deletar</a>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>