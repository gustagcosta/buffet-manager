@model Buffet.ViewModels.Private.SituacaoConvidado.IndexViewModel;

@{
    ViewData["Title"] = "Situação de Convidado";
}

<div class="card mt-2">
    <div class="card-body">
        <h3>Situação de Convidado</h3>
        <form class="mt-3" method="post" asp-controller="SituacaoConvidado" asp-action="Store">
            <div class="form-group">
                <label for="descricao">Descrição</label>
                <input required type="text" name="descricao" class="form-control" id="descricao">
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
        <div class="mt-3">
            <ul class="list-group">
                @foreach (var s in @Model.Situacoes)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @s.Descricao
                        <span>
                            <a asp-controller="SituacaoConvidado" asp-action="Edit" class="btn btn-primary">Editar</a>
                            <a asp-controller="SituacaoConvidado" asp-action="Destroy" class="btn btn-danger">Deletar</a>
                        </span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>