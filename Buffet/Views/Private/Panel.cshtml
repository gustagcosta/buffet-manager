@{
    ViewData["Title"] = "Painel do Usu√°rio";
}
<div class="row">
    <div class="col">
        <div class="card mt-2">
                <div class="card-body">
                    <h3>Atualizar dados</h3>
                    <form method="post" asp-controller="User" asp-action="UpdateUser">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control" value="@User.Identity.Name" id="email">
                        </div>
                        <div class="form-group">
                            <label for="oldPassword">Senha atual</label>
                            <input type="password" class="form-control" id="oldPassword" name="oldPassword">
                        </div>
                        <div class="form-group">
                            <label for="newPassword">Nova senha</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword">
                        </div>
                        <div class="form-group">
                            <label for="newPasswordConfirm">Confirmar nova senha</label>
                            <input type="password" class="form-control" id="newPasswordConfirm" name="newPasswordConfirm">
                        </div>
                        <button type="submit" class="btn btn-primary">Atualizar</button>
                    </form>
                </div>
            </div>
    </div>
    
    
</div>