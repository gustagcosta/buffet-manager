@model Buffet.ViewModels.Private.Cliente.ClienteViewModel;

@{
    ViewData["Title"] = "Clientes";
}

<div class="card mt-2">
    <div class="card-body">
        <h3>Lista de Clientes</h3>
        @if (@Model.mensagem != "") 
        {
            <div>
                <p class="alert-danger">@Model.mensagem</p>
            </div>
        }
        <div>
            <form method="get" asp-controller="Cliente" asp-action="ClientesFiltro">
                <div class="form-row">
                    <div class="col-6">
                        <label for="descricao">Nome</label>
                        <input type="text" name="buscaNome" class="form-control" id="buscaNome">
                    </div>
                    <div class="col-6">
                        <label for="descricao">E-mail</label>
                        <input type="text" name="buscaEmail" class="form-control" id="buscaEmail" />
                    </div>
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-primary" type="submit">Pesquisar</button>
                    <a asp-controller="Cliente" asp-action="Create" class="btn btn-success">Novo Cliente</a>
                </div>
            </form>
        </div>
        <div class="mt-3">
            <table class="table table-striped">
                <tr>
                    <th >Nome</th>
                    <th >E-mail</th>
                    <th >Observações</th>
                    <th>Eventos</th>
                    <th></th>
                </tr>
                @if (@Model != null)
                {
                    @foreach (var c in @Model.Clientes)
                    {
                        <tr>
                            <td>@c.Nome</td>
                            <td>@c.Email</td>
                            <td>@c.Observacoes</td>
                            <td></td>
                            <td>
                                <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-primary">Ver/Editar</a>
                                <a class="ml-2 btn btn-danger" asp-controller="Cliente" asp-action="Destroy" asp-route-id="@c.Id">Deletar</a>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>