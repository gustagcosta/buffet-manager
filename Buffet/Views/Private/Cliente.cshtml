@model Buffet.ViewModels.Private.Cliente.IndexViewModel;

@{
    ViewData["Title"] = "Clientes";
}

<div class="card mt-2">
    <div class="card-body">
        <h3>Clientes</h3>
    
        <form class="mt-3" method="post" asp-controller="Cliente" asp-action="Store">
            <input type="hidden" name="id" value="@Model.id" />
            <div class="form-group">
                <label for="nomeCliente">Nome</label>
                <input required type="text" value="@Model.nome" name="nomeCliente" class="form-control" id="nomeCliente">
            </div>
            <div class="form-group form-row">
                <div class="col-6">
                    <label for="tipoCliente">Tipo</label>
                    <select id="tipoCliente" name="tipoCliente" class="form-control">
                        <option value="fisica">Pessoa Física</option>
                        <option value="juridica">Pessoa Jurídica</option>
                    </select>
                </div>
                <div class="col-6">
                    <label for="emailCliente">Email</label>
                    <input required type="email" value="@Model.email" name="emailCliente" class="form-control" id="emailCliente">
                </div>
            </div>
            <div class="form-group form-row">
                <div class="form-group col-6">
                    <label for="enderecoEstadoCliente">Estado</label>
                    <input required type="text" value="" name="enderecoEstadoCliente" class="form-control" id="enderecoEstadoCliente">
                </div>
                <div class="col-6">
                    <label for="enderecoCidadeCliente">Cidade</label>
                    <input required type="text" value="" name="enderecoCidadeCliente" class="form-control" id="enderecoCidadeCliente">
                </div>
                <div class="col-4">
                    <label for="enderecoBairroCliente">Bairro</label>
                    <input required type="text" value="" name="enderecoBairroCliente" class="form-control" id="enderecoBairroCliente">
                </div>
                <div class="col-4">
                    <label for="enderecoRuaCliente">Rua</label>
                    <input required type="text" value="" name="enderecoRuaCliente" class="form-control" id="enderecoRuaCliente">
                </div>
                <div class="col-4">
                    <label for="enderecoNumCliente">Número</label>
                    <input required type="text" value="" name="enderecoNumCliente" class="form-control" id="enderecoNumCliente">
                </div>
            </div>
            <div class="form-group">
                <label for="obsCliente">Observações</label>
                <textarea required value="" name="obsCliente" class="form-control" id="obsCliente"></textarea>
            </div>

            <div class="col-12 d-flex justify-content-end"><button type="submit" class="btn btn-primary">Enviar</button></div>
        </form>
        <div class="mt-3">
            <ul class="list-group">

                <li class="list-group-item d-flex justify-content-between align-items-center">

                    <span>
                        <a asp-controller="Evento" asp-action="Edit" asp-route-id="" class="btn btn-primary">Editar</a>
                        <a asp-controller="Evento" asp-action="Destroy" asp-route-id="" class="btn btn-danger">Deletar</a>
                    </span>
                </li>

            </ul>
        </div>
    </div>
</div>
