<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Buffet Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img src="~/images/logo.png" width="32" class="mr-2" />
          Buffet Manager
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" asp-controller="Public" asp-action="Index">
                Pagina Inicial
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Public" asp-action="Login">
                Login
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Public" asp-action="Register">
                Cadastro
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Public" asp-action="Recovery">
                Recuperação de Conta
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Public" asp-action="Terms">
                Termos de Uso
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Public" asp-action="Policy">
                Política de Privacidade
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container">@RenderBody()</main>

    <footer class="border-top footer text-muted">
      <div class="container">&copy; 2021 - Buffet</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
